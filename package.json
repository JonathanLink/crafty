{
  "name": "crafty-workspace",
  "private": true,
  "version": "1.21.1",
  "description": "Base repo for all JS Tooling at Swissquote",
  "license": "Apache-2.0",
  "main": "index.js",
  "author": "Stephane Goetz",
  "workspaces": {
    "packages": [
      "packages/*",
      "package-forks/*",
      "examples/*",
      "examples/maven/src/main/frontend"
    ]
  },
  "scripts": {
    "lint:ci": "yarn lint:code:ci && yarn lint:docs",
    "lint:code:ci": "yarn workspaces foreach -vp run lint",
    "lint:code": "./run_all.sh lint --fix",
    "lint:docs": "./lint_docs.sh",
    "clean": "lerna clean --yes && rm -rf experiment/node_modules",
    "build": "./run_all.sh build",
    "stats": "find . -name '*-stats.json' -print0 | xargs -0 utils/duplicates.js",
    "test": "./run_all.sh test",
    "test:ci": "./run_all.sh test:ci",
    "publish:canary": "./utils/publish.js --pre-release",
    "publish:all": "./utils/publish.js",
    "upgrade": "yarn up -R '**'"
  },
  "dependencies": {
    "@statoscope/cli": "5.26.2",
    "@types/eslint": "^8.0.0",
    "@types/jest": "^29.0.0",
    "@vercel/ncc": "0.36.1",
    "webpack-bundle-size-analyzer": "3.1.0",
    "write-good": "1.0.8"
  },
  "engines": {
    "node": ">=16"
  },
  "resolutions": {
    "@types/eslint": "^8.0.0",
    "@rollup/plugin-node-resolve@15.0.1": "patch:@rollup/plugin-node-resolve@npm%3A15.0.1#./.yarn/patches/@rollup-plugin-node-resolve-npm-15.0.1-3c00b5782e.patch",
    "rollup-plugin-typescript2@0.34.1": "patch:rollup-plugin-typescript2@npm%3A0.34.1#./.yarn/patches/rollup-plugin-typescript2-npm-0.34.1-6b67180d5c.patch"
  },
  "packageManager": "yarn@3.5.0"
}
