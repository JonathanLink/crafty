{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "schedule": "before 9pm on Monday",
  "statusCheckVerify": true,
  "packageRules": [
    {
      "packagePatterns": [
        "@types/*"
      ],
      "rangeStrategy": "update-lockfile"
    }
  ],
  "ignoreDeps": [
    "lerna",
    "postcss-custom-properties"
  ],
  "ignorePaths": [
    "packages/integration/fixtures"
  ]
}
